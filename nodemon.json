{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "logs/",
    "dist/"
  ],
  "verbose": true,
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts,js,html,json,yml,css",
  "exec": "ts-node src/server.ts",
  "delay": "2500",
  "watch": [
    "./**/*.ts"
  ]
}
