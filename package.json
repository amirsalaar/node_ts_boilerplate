{
  "name": "node_ts_jest_eslint_boiler",
  "version": "1.0.0",
  "description": "",
  "main": "indexpress.js",
  "scripts": {
    "watch": "tsc --skipLibCheck --watch",
    "dev": "nodemon --quiet --watch dist --exec 'clear;node dist/index.js'",
    "lint": "eslint --ext .ts .",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --write --loglevel silent './**/*.{json,js}'",
    "test": "jest",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "prepare": "husky install"
  },
  "lint-staged": {
    "./**/*.{js,json,ts}": "eslint --cache --fix && npm run format"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cross-env": "^7.0.3",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.33",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.21.0",
    "eslint-plugin-jest": "^24.2.0",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "lint-staged": "^12.2.2",
    "nodemon": "^2.0.7",
    "typescript": "^4.2.3"
  }
}
